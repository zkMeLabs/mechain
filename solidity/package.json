{
  "name": "mechain-solidity",
  "description": "Smart Contract library for Solidity",
  "version": "0.1.2",
  "files": [
    "/contracts/**/*.sol",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "compile": "npx hardhat compile",
    "clean": "npx hardhat clean && rm -rf ./build ./contracts/build",
    "lint:sol": "npx solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\""
  },
  "keywords": [
    "solidity",
    "ethereum",
    "precompile"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zkMeLabs/mechain.git"
  },
  "bugs": {
    "url": "https://github.com/zkMeLabs/mechain/issues"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@ethers-ext/signer-ledger": "^6.0.0-beta.1",
    "@ledgerhq/hw-transport-node-hid": "^6.28.1",
    "@openzeppelin/contracts": "^4.8.3",
    "@openzeppelin/contracts-upgradeable": "4.8.3",
    "@types/chai": "^4.3.9",
    "@types/mocha": "^10.0.3",
    "chai": "^4.3.10",
    "inquirer": "^8.1.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@types/inquirer": "^7.3.1",
    "axios": "^0.27.2",
    "bech32": "^2.0.0",
    "ethers": "^6.1.0",
    "hardhat": "^2.19.4",
    "hardhat-dependency-compiler": "^1.1.3",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-dev.23",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
