  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Test Function",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "args": ["-testify.m", "^(TestTransfer)$"]
    },
    {
      "name": "Attach mechaind",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": 81011
    },
    {
      "name": "Launch mechaind",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/mechaind",
      "args": [
        "start",
        "--home",
        "${workspaceFolder}/deployment/localup/.local/validator0",
        "--keyring-backend",
        "test",
        "--api.enabled-unsafe-cors",
        "true",
        "--address",
        "0.0.0.0:28750",
        "--grpc.address",
        "0.0.0.0:9090",
        "--p2p.laddr",
        "tcp://0.0.0.0:27750",
        "--p2p.external-address",
        "127.0.0.1:27750",
        "--rpc.laddr",
        "tcp://0.0.0.0:26657",
        "--rpc.unsafe",
        "true",
        "--log_format",
        "json"
      ],
      "cwd": "${workspaceFolder}/build"
    }
  ]
}
