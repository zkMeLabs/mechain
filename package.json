{
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7"
  },
  "scripts": {
    "prepare": "husky",
    "test": "make test"
  },
  "type": "module",
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.sh": [
      "shfmt -w"
    ],
    "*.go": [
     "golangci-lint run --out-format=tab"
    ]
  }
}
